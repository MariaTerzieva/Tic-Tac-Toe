<h1>Leaderboard</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of Wins</th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.number_of_wins %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', root_url %>